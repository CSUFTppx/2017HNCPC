<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/ppx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8dB6CD"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="CSUFT停车场"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/tcc"
        android:layout_weight="1">
        <!--<com.example.ling.bluetooth.info.MyView-->
            <!--android:id="@+id/vi"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
        <FrameLayout
            android:id="@+id/tcc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">
            <!--<Button-->
            <!--android:id="@+id/show"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="t"/>-->
            <ImageView
                android:id="@+id/carport1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carport"
                android:visibility="gone"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="60dp"/>
            <ImageView
                android:id="@+id/carport2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carport"
                android:visibility="gone"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="120dp"/>
            <ImageView
                android:id="@+id/carport3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carport"
                android:visibility="gone"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="60dp"/>
            <ImageView
                android:id="@+id/carport4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carport"
                android:visibility="gone"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="120dp"/>
            <ImageView
                android:id="@+id/carport5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carport"
                android:visibility="gone"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="380dp"/>
            <ImageView
                android:id="@+id/carport6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/carport"
                android:visibility="gone"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="380dp"/>
            <ImageView
                android:id="@+id/car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="20dp"/>
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8dB6CD"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_pack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:text="选择停车位"/>
        <TextView
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:text="还剩3个停车位"/>
    </LinearLayout>

</LinearLayout>
